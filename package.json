{
  "name": "@appril/scripts",
  "description": "Utility Scripts for Appril Development",
  "version": "0.2.2",
  "author": "Slee Woo",
  "license": "MIT",
  "directories": {
    "bin": "pkg"
  },
  "files": [
    "pkg/*"
  ],
  "scripts": {
    "// ✨ build": "",
    "prebuild": "mkdir -p pkg; find pkg -type f -exec rm -fv {} \\;",
    "build": "./lib/_build.sh",
