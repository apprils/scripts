{
  "name": "@appril/scripts",
  "description": "Utility Scripts for Appril Development",
  "version": "0.2.4",
  "author": "Slee Woo",
  "license": "MIT",
  "engines": {
    "node": "20.10",
    "npm": "10.2"
  },
  "directories": {
    "bin": "pkg"
  },
  "files": [
    "pkg/*"
  ],
  "scripts": {
    "// âœ¨ build": "",
    "prebuild": "mkdir -p pkg; find pkg -type f -exec rm -fv {} \\;",
    "build": "./lib/_build.sh",
    "preversion:bump": "npm run build"
  },
  "release-it": {
    "hooks": {
      "before:init": [
        "npm run build"
      ],
      "after:release": [
        "mkdir -p var/pub",
        "npm pack --pack-destination var/pub"
      ]
    }
  },
  "peerDependencies": {
    "esbuild": "^0.19.11",
    "nodemon": "^3.0.2"
  },
  "devDependencies": {
    "release-it": "^17.0.1"
  }
}
